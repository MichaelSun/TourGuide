<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_top"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/guide_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/booking_guide"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/guide_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="张三"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_middle"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/destination_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/booking_destination"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/destination_et"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:hint="@string/booking_destination"
            android:paddingRight="10dp"
            android:textColor="#666666"
            android:textColorHint="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/start_time_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/booking_start_time"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/start_time_et"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:hint="@string/booking_start_time"
            android:paddingRight="10dp"
            android:textColor="#666666"
            android:textColorHint="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/booking_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_login_green"
        android:text="@string/immediately_booking" />

</LinearLayout>