<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.find.guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" >

            <com.plugin.common.view.WebImageView
                android:id="@+id/guide_header_iv"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_header"
                app:conerRadius="3dp" />

            <TextView
                android:id="@+id/guide_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/guide_header_iv"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:text="张帝"
                android:textColor="@color/default_text_color"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/guide_gender_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/guide_name_tv"
                android:scaleType="center"
                android:src="@drawable/icon_male" />

            <TextView
                android:id="@+id/star_evaluate_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/guide_name_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/guide_header_iv"
                android:textColor="@color/default_text_color"
                android:textSize="20sp" />

            <View
                android:id="@+id/guide_star1"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignBottom="@id/guide_header_iv"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/guide_header_iv"
                android:background="@drawable/star_big_gold" />

            <View
                android:id="@+id/guide_star2"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignTop="@id/guide_star1"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/guide_star1"
                android:background="@drawable/star_big_gold" />

            <View
                android:id="@+id/guide_star3"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignTop="@id/guide_star1"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/guide_star2"
                android:background="@drawable/star_big_gold" />

            <View
                android:id="@+id/guide_star4"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignTop="@id/guide_star1"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/guide_star3"
                android:background="@drawable/star_big_gold" />

            <View
                android:id="@+id/guide_star5"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignTop="@id/guide_star1"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/guide_star4"
                android:background="@drawable/star_big_silver" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/city_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="城        市"
                android:textColor="@color/default_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="北京"
                android:textColor="@color/default_text_color"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_middle"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" >

            <TextView
                android:id="@+id/good_scenic_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="@string/good_scenic"
                android:textColor="@color/default_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/good_scenic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="right|center_vertical"
                android:text="故宫"
                android:textColor="@color/default_text_color"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/guide_history_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_middle" >

            <TextView
                android:id="@+id/guide_history_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/guide_history"
                android:textColor="@color/default_text_color"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/history_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_arr" />

            <TextView
                android:id="@+id/guide_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/history_arrow"
                android:layout_toRightOf="@id/guide_history_label"
                android:gravity="right"
                android:singleLine="true"
                android:text="导游历史"
                android:textColor="@color/default_text_color"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/guide_card_id_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="@string/guide_card_id"
                android:textColor="@color/default_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/guide_card_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_top"
            android:minHeight="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/destination_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="@string/booking_destination"
                android:textColor="@color/default_text_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/destination_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="#00000000"
                android:gravity="center_vertical|right"
                android:hint="@string/booking_destination_hint"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_hint_color"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/start_time_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_middle" >

            <TextView
                android:id="@+id/start_time_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/booking_start_time"
                android:textColor="@color/default_text_color"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/start_time_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_arr" />

            <TextView
                android:id="@+id/start_time_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/start_time_arrow"
                android:layout_toRightOf="@id/start_time_label"
                android:gravity="right|center_vertical"
                android:text="@string/booking_start_time"
                android:textColor="@color/default_text_color"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/end_time_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_bottom" >

            <TextView
                android:id="@+id/end_time_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/booking_end_time"
                android:textColor="@color/default_text_color"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/end_time_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_arr" />

            <TextView
                android:id="@+id/end_time_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/end_time_arrow"
                android:layout_toRightOf="@id/end_time_label"
                android:gravity="right|center_vertical"
                android:text="@string/booking_end_time"
                android:textColor="@color/default_text_color"
                android:textSize="18sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/booking_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_orange"
            android:gravity="center"
            android:text="@string/goto_booking"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>